@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form-title" style="background-image: url('https://i.imgur.com/YflXnom.jpg');">
                <span class="login100-form-title-1">
                    Вход
                </span>
            </div>
            <form method="post">
                <h4><b>Влизане в акаунт</b></h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="wrap-input100 validate-input m-b-26" style="margin-top:10px">
                    <label asp-for="Input.Email">Имейл</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-26" style="margin-top:10px">
                    <label asp-for="Input.Password">Парола</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-26" style="margin-top:10px">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Запомни Ме ?
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Влизане</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Забравена парола?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Направи нова Регистрация</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
