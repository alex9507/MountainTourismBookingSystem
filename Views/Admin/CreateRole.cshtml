@using Microsoft.AspNetCore.Identity
@model RoleModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Създаване на Роля";
}

@if (SignInManager.IsSignedIn(User))
{
    <BR>
    <BR>
    <BR>
    <BR>

    <div class="panel panel-default bootstrap-basic">
        <div class="panel-heading">
            <h3 class="panel-title">Добавяне на Роля</h3>
        </div>
        <form asp-action="CreateRole" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input asp-for="@Model.Name" class="form-control" placeholder="Роля" align="justify">
                    <span asp-validation-for="@Model.Name" class="text-danger" align="justify"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" style="width:auto" align="justify">
                        Създаване
                    </button>
                </div>
            </div>
        </form>
    </div>
}
