@{
    ViewData["Title"] = "Задаване на Роля";
}

<h2>Промяна на роля на потребител</h2>

@using (Html.BeginForm("AssignRole", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="panel panel-default bootstrap-basic">
        <div class="panel panel-default bootstrap-basic">
            <div class="panel-heading">
                <h3 class="panel-title">Потребители</h3>
            </div>
            @Html.DropDownList("UserName")
        </div>
    
        <div class="panel panel-default bootstrap-basic">
            <div class="panel-heading">
                <h3 class="panel-title">Роли</h3>
            </div>
            @Html.DropDownList("Name")
        </div>
    
    
        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <button type="submit" class="btn btn-primary" style="width:auto" align="justify">
                    Задаване на Роля
                </button>
            </div>
        </div>
    </div>
}
